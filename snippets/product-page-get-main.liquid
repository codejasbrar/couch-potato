{%- case template_layout -%}
{%- when '1' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
          <div class="col-md-12 only_mobile product-page-info__title mb-15 text-center text-lg-left">
            {%- if is_quick_view -%}
                <a href="{{ url }}">{{ title }}</a>
            {%- else -%}
                <h1 class="m-0">{{ title }}</h1>
            {%- endif -%}
        </div>
            <div class="col-12 col-lg-6{% if reverse %} order-lg-1{% endif %}{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                      {% if product.metafields.product_three_d.uuid != blank %}
                      <div class="sayduck-3d-viewer-container" style="min-height:450px;min-width:300px;width:100%;height:100%;"
    data-product-uuid="{{ product.metafields.product_three_d.uuid }}" data-viewer-options='{"appearance":{"background":"gray"}}'>
    </div><script defer type="text/javascript" src="https://viewer.sayduck.com"></script>
                      {% else %}
                      {% include 'product-page-get-gallery' %}
                     {% endif %}
                      
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6 product_right_info">
                {% include 'product-page-get-info' %}
            </div>
        </div>
    </div>
{%- when '2' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-gallery' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6">
                {% include 'product-page-get-info' %}
                {%- if section.settings.show_tabs -%}
                    <div class="product-page__tabs mt-30 mb-40">
                        {% include 'product-page-get-tabs' %}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '3' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-gallery' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-info' %}
                        {%- if section.settings.show_tabs -%}
                            <div class="product-page__tabs mt-30 pb-40">
                                {% include 'product-page-get-tabs' %}
                            </div>
                        {%- endif -%}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '4' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        <div class="row">
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} index-10 sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-gallery' %}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
            <div class="col-12 col-lg-6{% if enable_sticky_gallery %} sticky-sidebar js-sticky-sidebar{% endif %}">
                {%- if enable_sticky_gallery -%}
                    <div data-js-sticky-sidebar-body{% if is_quick_view %} data-js-disable-offsets{% endif %}>
                {%- endif -%}
                        {% include 'product-page-get-info' %}
                        {%- if section.settings.show_tabs -%}
                            <div class="product-page__tabs mt-30 pb-40">
                                {% include 'product-page-get-tabs' %}
                            </div>
                        {%- endif -%}
                {%- if enable_sticky_gallery -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- when '5' -%}
    <div class="product-page-main"{% include 'product-get-attributes' %} data-js-product-clone-id="footbar">
        {% include 'product-page-get-gallery' %}
        {% include 'product-page-get-info' %}
    </div>
{%- endcase -%}

{%- if enable_sticky_gallery -%}
    <script>
        Loader.require({type: "script", name: "sticky_sidebar"});
    </script>
{%- endif -%}